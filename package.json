{
  "scripts": {
    "css:build": "./tailwindcss-linux-x64 -i ./themes/craftytheme/assets/css/main.css -o ./themes/craftytheme/static/css/main.css --minify",
    "css:watch": "./tailwindcss-linux-x64 -i ./themes/craftytheme/assets/css/main.css -o ./themes/craftytheme/static/css/main.css --watch",
    "build": "npm run css:build && hugo --gc --minify",
    "dev": "concurrently \"npm run css:watch\" \"hugo server --disableFastRender\"",
    "start": "hugo server"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.11",
    "concurrently": "^8.2.2"
  }
}
